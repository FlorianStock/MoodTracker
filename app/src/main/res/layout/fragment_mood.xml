<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/root"
tools:context="com.stock.florian.moodtracker.MoodsViewPager.MoodFragment">

<ImageView
    android:id="@+id/imageView_smiley"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:contentDescription="@string/app_name"
    app:srcCompat="@drawable/smiley_happy" />

<ImageButton
    android:id="@+id/imageButton_comment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="50dp"
    android:layout_marginStart="44dp"
    android:layout_weight="1"
    android:contentDescription="@string/app_name"
    android:background="@android:color/transparent"
    app:srcCompat="@drawable/ic_note_add_black" />

<ImageButton
    android:id="@+id/imageButton2_history"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignTop="@+id/imageButton_comment"
    android:layout_marginEnd="50dp"
    android:background="@android:color/transparent"
    app:srcCompat="@drawable/ic_history_black" />

</RelativeLayout>